{
  "dataset_reader":{
    "type":"java",
    "utterance_indexers":{"tokens": {"namespace": "utterance"}}
  },
  "train_data_path": "tests/fixtures/encoder_decoder/java_parser/sample_data_longer.json",
//  "train_data_path": "tests/fixtures/encoder_decoder/java_parser/sample_data.json",
  "validation_data_path": "tests/fixtures/encoder_decoder/java_parser/sample_data.json",

  "model": {
    "action_embedding_dim": 50,
    "type": "java_parser",
    "utterance_embedder": {
      "tokens": {
        "type": "embedding",
        "vocab_namespace": "utterance",
        "embedding_dim": 50,
        "trainable": true
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 50,
      "hidden_size": 25,
      "num_layers": 1,
      "bidirectional": true
    },
    "max_decoding_steps": 150,
    "decoder_beam_search": {
      "beam_size": 3
    },
    "attention_function": {"type": "dot_product"}
  },
  "iterator": {
    "type": "bucket",
    "padding_noise": 0.0,
    "batch_size" : 4,
    "sorting_keys": [["rules", "dimension_0"]]
  },
  "trainer": {
    "num_epochs": 2,
    "patience": 10,
    "cuda_device": -1,
    "optimizer": {
      "type": "adam",
      "lr": 0.01
    }
  }
}
